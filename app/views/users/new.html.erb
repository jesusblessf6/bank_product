
<div class="row">

	
	<div class="span4 offset4 well">
		<% if @user.errors.count > 0 then %>
		<div class="alert">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<strong>错误!</strong> <%= @user.errors.full_messages.first %>
		</div>
		<% end %>
		<%= form_for(@user) do |f| %>
			<%= f.label :email, "电子邮件"%> 
			<%= f.text_field :email %>

			<%= f.label :name, "昵称"%>
			<%= f.text_field :name%>

			<%= f.label :password, "密码" %>
			<%= f.password_field :password%>

			<%= f.label :password_confirmation, "密码确认"%>
			<%= f.password_field :password_confirmation%><br>

			<%= f.submit "注册", class: "btn btn-primary btn-large"%>
		<%end%>	
	</div>
	
</div>